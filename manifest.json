{
  "manifest_version": 2,
  "name": "ChromeImgHider",
  "version": "0.2.2",
  "description": "Hides images on webpages.",
  "icons": { "128": "icon.png" },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "style-hide.css"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "ChromeImgHider",
    "default_icon": "icon.png"
  }
}

{
  "manifest_version": 2,
  "name": "ImgHider",
  "version": "0.1",
  "description": "Hides images on webpages.",
  "icons": { "128": "icon.png" },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-2.1.4.min.js", "content.js"]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "ImgHider",
    "default_icon": "icon.png"
  }
}
